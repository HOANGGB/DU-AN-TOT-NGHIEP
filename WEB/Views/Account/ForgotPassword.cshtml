
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="login-form shadow p-4 rounded bg-light">
                <h2 class="text-center mb-4">Quên mật khẩu</h2>
                <form asp-controller="Account" asp-action="ResetPass" method="post">

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" name="email" placeholder="Nhập email của bạn" required>
                    </div>
                    <p class="text-danger">@ViewBag.MessER</p>
                    <p class="text-success">@ViewBag.MessSucc</p>

                    <!-- Submit Button (Centered) -->
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mt-4">Cấp lại mật khẩu</button>
                    </div>                
                    
                </form>
                <div class="d-flex justify-content-center">
                    <a href="/Account/Login" class="btn btn-outline-success mt-4">Quay lại đăng nhập</a>
                </div>  
            </div>
        </div>
    </div>
</div>

