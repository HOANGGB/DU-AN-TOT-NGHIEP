
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="register-form shadow p-4 rounded bg-light">
                <h2 class="text-center mb-4">Đăng ký</h2>
                <form asp-controller="Account" asp-action="CheckRegister" method="post">
                    <!-- Họ và tên -->
                    <div class="form-group">
                        <label for="fullname">Họ và tên</label>
                        <input type="text" id="fullname" class="form-control" name="HoTen" placeholder="Nhập họ và tên" required>
                    </div>
                    <p class="text-danger"> @ViewBag.MessHoten</p>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" name="Email" placeholder="Nhập email" required>
                    </div>
                    <p class="text-danger"> @ViewBag.MessEmail</p>

                    <!-- Số điện thoại -->
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input type="tel" id="phone" class="form-control" name="SoDienThoai" placeholder="Nhập số điện thoại" required>
                    </div>
                    <p class="text-danger"> @ViewBag.MessSdt</p>
                    <p class="text-success"> @ViewBag.MessSendMail</p>

                    <!-- Nút Đăng ký (căn giữa) -->
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mt-4">Đăng ký</button>
                    </div>

                    <p class="text-center mt-3">
                        <a href="/Account/Login">Đăng nhập</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
