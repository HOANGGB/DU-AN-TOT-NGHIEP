@model List<WEB.Models.SanPham>

    <h2 class="text-lg-center p-4">Sản Phẩm Liên Quan</h2>

<div class="row px-xl-5 pb-3">
    @if(Model.Count > 0)
    {
        @foreach (var sp in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img d-flex justify-content-center align-items-center position-relative overflow-hidden bg-transparent border p-0" style="height: 250px;">
                        <img class="img-fluid w-100 h-100" src="/img/@sp.HinhAnh" alt="Hinh Anh" style="object-fit: contain;">
                    </div>


                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@sp.TenSanPham</h6>
                        <div class="d-flex justify-content-center">
                            <h6>$@sp.Gia</h6><h6 class="text-muted ml-2"></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <form asp-controller="Home" asp-action="Detail" method="post">
                            <button type="submit" class="btn btn-sm text-dark p-0" name="id" value="@sp.SanPhamID">
                                <i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết
                            </button>
                        </form>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <button type="submit" class="btn btn-sm text-dark p-0" name="id" value="@sp.SanPhamID">
                                <i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng
                            </button>
                        </form>
                    </div>
                </div>
            </div>

        }

    }
    else
    {
        <h6 class="text-danger">Không tìm thấy sản phẩm nào!</h6>
        <a href="/Home/Index">Quay lại trang chủ</a>
    }
</div>
