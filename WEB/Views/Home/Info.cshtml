@model WEB.Models.NguoiDung

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Thông tin tài khoản</h2>
    <form asp-controller="Home" asp-action="ChangeInfo" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Cột trái: Hình đại diện -->
            <div class="col-md-4 mb-3 text-center">
                <div class="border rounded-circle overflow-hidden mx-auto" style="width: 150px; height: 150px;">
                    <img src="~/img/@Model?.HinhAnh" alt="Avatar" class="img-fluid" style="object-fit: contain; width: 100%; height: 100%;">
                </div>
                <input type="file" class="form-control" value="@Model?.HinhAnh" id="Image" name="HinhAnh" />
            </div>

            <!-- Cột phải: Thông tin tài khoản -->
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <label for="name">Tên</label>
                    <input type="text" class="form-control" id="name" name="HoTen" value="@Model?.HoTen" placeholder="Nhập tên của bạn" required>
                </div>
                <p class="text-danger"> @ViewBag.MessHoten</p>

                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="phone">Số điện thoại</label>
                        <input type="tel" class="form-control" id="phone" name="SoDienThoai" value="@Model?.SoDienThoai" placeholder="Nhập số điện thoại" required>
                    </div>
                    <p class="text-danger"> @ViewBag.MessSdt</p>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="password">Mật khẩu</label>
                        <input type="text" class="form-control" id="password" name="MatKhauHash" value="@Model?.MatKhauHash" placeholder="Nhập mật khẩu" required>
                    </div>
                    <p class="text-danger"> @ViewBag.MessMatkhau</p>

                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
							<label for="diachi">Địa chi mặc định <a href="/Account/Address" class="btn btn-warning">Xem</a></label>
                            

                    </div>
                </div>
                    <input type="hidden" value="@Model?.NguoiDungID" name="NguoiDungID" required />

                <button class="btn btn-primary mt-5 col-sm-4" type="submit">Lưu</button>

            </div>
        </div>
        </div>
    </form>
</div>
